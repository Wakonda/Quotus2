<div id="form_id_send_painting">
	{% include "Index/send_form.html.twig" with {'form':form} %}
</div>

<script>
	$(function() {
		$('body').on('submit', "form#send_form", function(event) {
			event.preventDefault();
			
			var formValue = $(this).serialize();
			
			$.ajax({
				url: "{{ path('send_go', {'id' : id}) }}",
				type: "POST",
				data: formValue,
				success: function(res)
				{
					if(res.result == "error")
					{
						$("div#form_id_send_painting").html(res.content);
					}
					else
					{
						$("form#send_form").find("input[type=text], textarea").val("");
						tinyMCE.activeEditor.setContent('');
						$('#send_modal').modal('hide');
						$('html, body').animate({scrollTop:$('h1').position().top}, 'slow');
						$('#send_result').html("{{ 'send.index.YourMessageHasBeenSentSuccessfully'|trans }}");
						$('#send_result').show();
					}
				}
			});
		});
	});
</script>