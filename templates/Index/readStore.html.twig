{% extends 'generic_layout.html.twig' %}

{% block head_title %}{{ entity.title }}{% endblock %}
{% block main_title %}{{ entity.title }}{% endblock %}

{% block meta_tag_description %}{% endblock %}

{% block main_content %}
	{% if entity.photo is not empty %}
		<p class="text-center">{{ (constant('\\App\\Entity\\Store::PATH_FILE')~entity.photo)|max_size_image() }}</p>
	{% else %}
		<div class="center-iframe">
		{{ entity.embedCode|raw }}
		</div>
	{% endif %}
	
	{% if entity.amazonCode %}
		<br>
		<div class="text-center">
			<a href="{{ entity.getExternalStoreLink() }}" class="btn btn-success" target="_blank"><i class="fas fa-shopping-basket" aria-hidden="true"></i></a>
		</div>
	{% endif %}
	
	{% if entity.text is not empty %}
		<br>
		<div id="main_poem_text" class="text-justify">
			<h3>{{ "store.read.Abstract"|trans }}</h3>
			{{ entity.text|raw }}
		</div>
	{% endif %}
	<hr>
	<p>
	{% if entity.biography is not empty %}
		<a href="{{ path('author', {'id' : entity.biography.id, 'slug' : entity.biography.slug }) }}" alt="">{{ entity.biography.title }}</a>
		{% if entity.biography.country is not empty %}
		-
		<a href="{{ path('country', {'id' : entity.biography.country.id, 'slug' : entity.biography.country.slug }) }}" alt=""><img class="flag" src="{{ asset(constant('\\App\\Entity\\Country::PATH_FILE')~entity.biography.country.flag) }}" alt="" height="8" /></a>
		{% endif %}
	{% else %}
		{{ "store.index.UnknownAuthor"|trans }}
	{% endif %}
	</p>
{% endblock %}